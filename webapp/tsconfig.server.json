{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "@api": [
        "api.ts"
      ],
      "struct/*": [
        "lib/struct/*"
      ],
      "email/*": [
        "lib/email/*"
      ],
      "middleware/*": [
        "lib/middleware/*"
      ],
      "misc/*": [
        "lib/misc/*"
      ],
      "queue/*": [
        "lib/queue/*"
      ],
      "redis/*": [
        "lib/redis/*"
      ],
      "secret/*": [
        "lib/secret/*"
      ],
      "airbyte/*": [
        "lib/airbyte/*"
      ],
      "styles/*": [
        "lib/styles/*"
      ],
      "utils/*": [
        "lib/utils/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "components/*": [
        "components/*"
      ],
      "context/*": [
        "context/*"
      ]
    }
  },
  "include": ["src/server.ts", "src/migrations/*.ts"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
  }
}
