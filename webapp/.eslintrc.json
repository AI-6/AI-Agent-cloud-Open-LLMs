{
	"ignorePatterns": [
		"*.config.js",
		"*.config.ts",
		"node_modules/"
		
	],
	"extends": "next/core-web-vitals",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-tabs": 0,
		"brace-style": [
			"error",
			"1tbs",
			{ "allowSingleLine": true }
		],
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1, "ignoreComments": true, "MemberExpression": 1 }
		],
		"jsx-quotes": [
			"error",
			"prefer-single"
		],
		"quotes": [
			"error",
			"single",
			{ "avoidEscape": true }
		],
		"semi": [
			"error",
			"always"
		],
		"curly": [
			"error"
		],
		"no-multiple-empty-lines": [
			"error",
			{ "max": 1 }
		],
		"no-template-curly-in-string": [
			"error"
		]
	}
}
